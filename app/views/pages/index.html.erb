<div class="container flex flex-wrap items-center justify-between mx-auto">
  <div class="hidden w-full md:block md:w-auto">
    <h1 class="text-5xl font-unbounded font-bold">Welcome to Funty!</h1>
    <p class="pl-2 text-xl text-purple-900 font-bold">Play with us! Win, earn, relax!</p>
    <% if current_user %>
    <% else %>
      <div class="pt-20">
        <p class="text-2xl font-unbounded"> Register and get <span class="text-purple-900">15,000,000</span> free coins!</p>
        <button class='mt-5'><%= link_to "Registration",user_new_path , class: "w-52 font-bold border border-t-8 border-l-8 border-b-13 border-r-13 border-black bg-amber-500 hover:bg-orange-800 focus:ring-4 focus:outline-none focus:ring-orange-300 text-md px-5 py-2.5 mt-5 text-center"%></button>
      </div>
    <% end %>
  </div>
  <a class="flex items-center border-t-8 border-l-8 border-b-13 border-r-13 border-black">
    <%= image_tag("index.jpg", width:"600", height:"600", alt:"Gameboy") %>
  </a>
</div>
